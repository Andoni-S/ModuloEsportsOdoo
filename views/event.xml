<?xml version="1.0" ?>
<odoo>
    <!-- vista Formulario -->
    <record id="event_form_view" model="ir.ui.view">
        <field name="name">game.form.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe-tittle">

                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <!-- vista Arbol -->
    <record id="event_tree_view" model="ir.ui.view">
        <field name="name">event.tree.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <tree string="event" >
                <field name="name" required="1"></field>
            </tree>
        </field>
    </record>


    <!-- vista Kanban -->
    <record id="game-kanban-view" model="ir.ui.view">
        <field name="name">event.kanban.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"></field>
                <field name="name"></field>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('esports.game','image',record.id.raw_value)" alt="imagen game"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- vista search -->
    <record id="game-search-view" model="ir.ui.view">
        <field name="name">event.search.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"></field>
            </search>
        </field>
    </record>
</odoo>