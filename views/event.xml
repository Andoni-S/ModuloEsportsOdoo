<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="event_form_view" model="ir.ui.view">
        <field name="name">esports.event.form.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Participants" class="oe_highlight" type="object" name="action_view_participants"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" string="Event Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="location"/>
                            <field name="ong"/>
                        </group>
                        <group>
                            <field name="organizer_id"/>
                            <field name="game_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="prize"/>
                        <!--field name="donation_percentage"/-->
                        <field name="total_amount" readonly="1"/>
                        <field name="donation" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="event_tree_view" model="ir.ui.view">
        <field name="name">esports.event.tree.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <tree string="Events">
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="organizer_id"/>
                <field name="game_id"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="event_kanban_view" model="ir.ui.view">
        <field name="name">esports.event.kanban.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="organizer_id"/>
                <field name="game_id"/>
                <field name="prize"/>
                <field name="donation" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('esports.game','image',record.game_id.raw_value)" alt="Game Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="location"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="event_search_view" model="ir.ui.view">
        <field name="name">esports.event.search.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="organizer_id"/>
                <field name="game_id"/>
            </search>
        </field>
    </record>
</odoo>
