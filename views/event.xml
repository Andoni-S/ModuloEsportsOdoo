<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="event_form_view" model="ir.ui.view">
        <field name="name">esports.event.form.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state_event" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>New Event Data</h1>
                    </div>
                    <field name="imagen" widget="image"/>
                    <div class="oe_title">
                        <h2>
                            <field name="name" string="Event Name"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="location"/>
                            <field name="ong"/>
                        </group>
                        <group>
                            <field name="organizer_id"/>
                            <field name="game_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="prize"/>
                        <field name="participant_num"/>
                        <field name="donation"/>
                    </group>
                    <field name="player_id"/>
                    <field name="team_id"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="event_tree_view" model="ir.ui.view">
        <field name="name">esports.event.tree.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <tree string="Events" decoration-info="state_event == 'in_progress'"
                  decoration-danger="state_event == 'completed'"
                  decoration-muted="state_event == 'created'">
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="organizer_id"/>
                <field name="game_id"/>
                <field name="state_event" class="rounded_status"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="event_kanban_view" model="ir.ui.view">
        <field name="name">esports.event.kanban.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="imagen"/>
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="organizer_id"/>
                <field name="game_id"/>
                <field name="prize"/>
                <field name="donation" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <field name="id" attrs="{'invisible':True}"/>
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('esports.event','imagen',record.id.raw_value)"
                                     alt="Event Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="location"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="event_search_view" model="ir.ui.view">
        <field name="name">esports.event.search.view</field>
        <field name="model">esports.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="location"/>
                <field name="organizer_id"/>
                <field name="game_id"/>
                <filter name="filter_created" string="Created" domain="[('state_event', '=', 'created')]"/>
                <filter name="filter_in_progress" string="In Progress" domain="[('state_event', '=', 'in_progress')]"/>
                <filter name="filter_completed" string="Completed" domain="[('state_event', '=', 'completed')]"/>
            </search>
        </field>
    </record>
</odoo>
